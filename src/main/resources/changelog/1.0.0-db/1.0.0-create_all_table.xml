<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="1" author="Kretov Ivan">
        <createTable tableName="users">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="email" type="VARCHAR(255)"/>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="farm_id" type="UUID"/>
            <column name="role" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="create_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="Kretov Ivan">
        <createTable tableName="farm">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="balance" type="int" defaultValue="0"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="Kretov Ivan">
        <createTable tableName="inventory_item">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="landing_time" type="TIMESTAMP"/>
            <column name="amount" type="int"/>
            <column name="description" type="VARCHAR(255)"/>
            <column name="harvest_time" type="int"/>
            <column name="price" type="int"/>
            <column name="sell_multiple" type="float"/>
            <column name="category" type="VARCHAR(255)"/>
            <column name="type" type="VARCHAR(255)"/>
            <column name="farm_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="barn_id" type="UUID"/>
            <column name="bed_id" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="Kretov Ivan">
        <createTable tableName="barns">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="farm_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="inventory_item" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="5" author="Kretov Ivan">
        <createTable tableName="beds">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="farm_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="inventory_item" type="UUID"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
